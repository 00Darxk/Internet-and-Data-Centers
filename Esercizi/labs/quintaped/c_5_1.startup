# Aggiungi un indirizzo ad un interfaccia
ip address add 100.10.0.2/24 dev eth0
# Inserisci un default gateway nella tabella di instradamento kernel (statica)

# Si modifica la MTU dell'interfaccia connessa al server
ip link set dev eth0 mtu 1450

# Avvia il servizio apache2 (web server)
systemctl start apache2